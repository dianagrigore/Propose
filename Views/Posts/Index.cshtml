
<br />

<h2 class="font-montserrat">Propuneri recente</h2>

<hr />

@if (TempData.ContainsKey("message"))
{
    <h3 class="alert alert-info" role="alert">@ViewBag.Message</h3>
}


@foreach (Propose.Models.Post post in ViewBag.Posts)
{
   
        @Html.Partial("PostInfo", post)
        <div class="panel-footer">
            <a class="btn btn-sm btn-info full-width clasa-butoane" href="/Posts/Show/@post.PostId"><span class="text-white">Afisare postare </span></a>
        </div>
   
    <br />

}

<div>
    <nav aria-label="Page navigation" >
        <ul class="pagination">
            <li>
                <a href="/Posts/Index?page=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li><a href="/Posts/Index?page=@i">@(i)</a></li>
            }

            <li>
                <a href="/Posts/Index?page=@(ViewBag.lastPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>




