@model Propose.Models.Post


@using (Html.BeginForm(actionName: "Edit", controllerName: "Posts", routeValues: new { id = Model.PostId }))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    <br />
    @Html.Label("Title", "Titlu postare")
    <br />
    @Html.Editor("Title")
    <br />
    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    <br /><br />

    @Html.Label("Content", "Continut Postare")
    <br />
    @Html.Editor("Content", new { htmlAttributes = new { @class = "form-control summernote" } })
    @* @Html.TextArea("Content", Model.Content, new { @class = "form-control summernote" })*@
    <br />
    @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
    <br /><br />

    <label>Selectati categoria</label>
    @Html.DropDownListFor(m => m.LabelId,
        new SelectList(Model.Lbl, "Value", "Text"),
        "Selectati categoria", new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.LabelId, "", new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-sm btn-info clasa-butoane" type="submit">Modifica postare</button>
}


