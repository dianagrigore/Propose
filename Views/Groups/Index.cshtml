
<br />

<h2 class="font-montserrat clasa-text-turcoaz">Grupuri</h2>

<hr />

@if (TempData.ContainsKey("message"))
{
    <h3 class="alert alert-info" role="alert">@ViewBag.Message</h3>
}


@foreach (Propose.Models.Group group in ViewBag.Groups)
{
    <div class="panel panel-article">
        @Html.Partial("GroupInfo", group)
        <div class="panel-footer">
            <a class="btn btn-sm clasa-roz full-width clasa-butoane" href="/Groups/Show/@group.GroupId">Afisare grup</a>
            
            
        </div>
    </div>
    <br />

}

<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="/Groups/Index?page=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li><a href="/Groups/Index?page=@i">@(i)</a></li>
            }

            <li>
                <a href="/Groups/Index?page=@(ViewBag.lastPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>





