
@model Propose.Models.Group


<h2 class="font-montserrat">Adaugare grup</h2>
@using (Html.BeginForm(actionName: "New", controllerName: "Groups"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("Name", "Nume grup")
    <br />
    @Html.TextBox("Name", null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Description", "Descriere grup")
    <br />
    @Html.TextArea("Description", null, new { @class = "form-control summernote" })
    @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
    <br />
    <br />

    <label>Selectati eticheta</label>
    @Html.DropDownListFor(m => m.LabelId, new SelectList(Model.Lbl, "Value", "Text"),
    "Selectati eticheta", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.LabelId, "", new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-sm clasa-galben clasa-butoane" type="submit">Adauga grup nou</button>

}





